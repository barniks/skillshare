<h1>Listing workshops</h1>

<table>
  <tr>
    <th>Sharer</th>
    <th>Learner</th>
    <th>Active</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Date</th>
    <th>Size</th>
    <th>Category</th>
    <th>Location</th>
    <th>Subdescription</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workshops.each do |workshop| %>
  <tr>
    <td><%= workshop.sharer_id %></td>
    <td><%= workshop.learner_id %></td>
    <td><%= workshop.active %></td>
    <td><%= workshop.start_time %></td>
    <td><%= workshop.end_time %></td>
    <td><%= workshop.date %></td>
    <td><%= workshop.size %></td>
    <td><%= workshop.category %></td>
    <td><%= workshop.location %></td>
    <td><%= workshop.subdescription %></td>
    <td><%= workshop.description %></td>
    <td><%= link_to 'Show', workshop %></td>
    <td><%= link_to 'Edit', edit_workshop_path(workshop) %></td>
    <td><%= link_to 'Destroy', workshop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

